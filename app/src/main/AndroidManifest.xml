            android:screenOrientation="portrait" />
        <activity
            android:name="com.fsh.android.mvp.ui.activity.SplashActivity"
            android:theme="@style/App.Theme.Launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

